
<% user =  User.find(event.user)
   created_at = event.readable.created_at
   task = event.readable.task
%>
<div class="notifications-single">
    <div class="notifications-single-face">
        <div>
          <a href="<%= user_path(user) %>">
            <%= image_tag("user-icon-test.png") %>
          </a>
        </div>  
    </div>
  <div class="notifications-single-body">
    <%= link_to user.display_name, user %> -
    <%= t :participated_in %> <%= link_to task.title, project_task_path(task.project, task) %>
  </div>
</div>


