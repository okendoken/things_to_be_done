<%
   clazz = event.readable.class.name.downcase
   event_type = symbol_event_type(event)
%>
<div class="notifications-single">
    <div class="notifications-single-face">
        <div>
          <a href="<%= user_path(event.user) %>">
            <%= image_tag("user-icon-test.png", :style => "height:24px; width:24px;") %>
          </a>
        </div>  
    </div>
  <div class="notifications-single-body">
    <%= link_to event.readable.user.display_name, event.readable.user %> -
    <%= t :"#{clazz}.#{event_type}" %> <%= link_to event.readable.task.title, project_task_path(event.readable.task.project, event.readable.task) %>
  </div>
</div>


