<%
   clazz = event.readable.class.name.downcase
   event_type = symbol_event_type(event)
%>
<div class="notifications-single">
  <div class="notifications-single-face">
    <div>
      <a href="<%= user_path(event.user) %>">
        <%= image_tag("user-icon-test.png") %>
      </a>
    </div>
  </div>
  <div class="notifications-single-body">
    <%= link_to event.readable.participation.user.display_name, event.readable.participation.user %> -
    <%= t :"#{clazz}.#{event_type}" %> <%= link_to event.readable.participation.task.title, prepare_for_path(event.readable)%>
  </div>
</div>
