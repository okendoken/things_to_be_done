<div class="row">
  <div class="task-row-image">
    <div title="<%= task.title %>">
      <img style="max-height: 36px; max-width: 36px;" src="/images/rails.png" alt="Image"/>
    </div>
    <div class="task-row-rating" title="<%= t :rating %>">
      <%= task.rating %>
    </div>
  </div>
  <div class="task-row-content">
    <div class="clearfix">
      <h4><%= link_to task.title, project_task_path(task.project, task) %></h4>
      <div class="task-row-info">
        <div class="task-row-participants" title="<%= t :participators %>">
          <i class="icon-user icon-dark-gray"></i><%= task.participations.count %>
        </div>
      </div>
      <hr/>
    </div>
    <p>
      <span><%= task.desc_short %></span>
      <%= link_to t(:details), project_task_path(task.project, task), :class => 'details-link' %>
    </p>
  </div>
</div>