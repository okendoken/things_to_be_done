<div id="avatar" class="avatar-box">
  <a href="<%= link_path %>">
    <%= image_tag guy.avatar.url, :class => 'avatar' %>
  </a>
  <% if can? :manage, guy %>
      <div class="avatar-upload-dialog">
        <%= form_tag upload_path, :multipart => true do %>
                <span class="fileinput-button">
                  <span><%= t(:edit_picture) %></span>
                  <%= file_field_tag 'avatar-upload', :name => 'picture', :accept => 'image/*' %>
                </span>
        <% end %>
      </div>
  <% end %>
</div>