<a class="pull-right btn btn-small btn-manage" data-display="manage" href="#">
  <i class="icon-cog"></i>
  <%= t :manage %>
</a>
<div class="manage-dialog hide">
  <div class="popover bottom">
    <div class="arrow"></div>
    <div class="popover-inner">
      <div class="popover-content">
        <%= link_to complete_path(target), :method => :post, :remote => true, :title => t(:complete_explanation), :class => 'btn btn-mini btn-success', :confirm => t(:are_you_sure) do %>
            <i class="icon-ok icon-white"></i>
            <%= t(:done) %>
        <% end %>
        <%= link_to '', :remote => true, :title => t(:delete_title, :target => target.title), :class => 'btn btn-mini', :confirm => t(:are_you_sure) do %>
            <i class="icon-remove"></i>
            <%= t(:delete) %>
        <% end %>
      </div>
    </div>
  </div>
</div>