<% state ||= nil %>
<div class="comment">
  <% if can? :destroy, comment %>
      <%= link_to 'Ã—', comment, :remote => true,
                  :method => :delete, :class => 'close', :'data-params' => "state=#{state}" %>
  <% end %>
  <div class="comment-face">
    <div>
      <a href="<%= user_path(comment.user) %>">
        <%= image_tag("user-icon-test.png") %>
      </a>
    </div>
  </div>
  <div class="comment-body">
    <% if full_view %>
        <%= link_to comment.target.title, prepare_for_path(comment.target) %> /
    <% end %>
    <%= link_to comment.user.display_name, comment.user %> -
    <%= comment.text %>
  </div>
  <div class="comment-info simple-gray">
    <i class="icon-comment icon-gray"></i>
    <%= format_date comment.created_at %>
    <div class="news-single-actions">
      <%= render :partial => 'partials/small_voter', :locals => {:target => comment} %>
    </div>
  </div>
  <hr/>
</div>