<%= form_for(prepare_for_path(target) + [ target.activities.build], :remote => true, :html => {:class => 'form-new-news'}) do |f| %>
    <div>
      <%= f.text_area :text, :class => 'input-xlarge', :rows => '1', :placeholder => t(:add_something) %>
    </div>
    <div>
      <%= f.submit t(:add), :class => 'btn btn-mini hide', :title => t(:add_title) %>
      <%= f.submit t(:add_and_complete), :class => 'btn btn-mini btn-success hide', :title => t(:add_and_complete_title), :name => 'complete' %>
    </div>
    <%= hidden_field_tag :state, state %>
<% end %>