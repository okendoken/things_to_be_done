<div class="notifications-content">
  <%= render :partial => 'partials/all_notifications', :locals => {:events => @events} %>
</div>
<% content_for :notifications_nav do %>
    <li><%= link_to :Notifications, notifications_path, :class => "btn", :id => "notifications-link" %></li>
<% end %>

<% content_for :notifications_dialog do %>
    <div id="notifications-dialog">
      <div class="notifications-content">
        <%= render :partial => 'partials/all_notifications', :locals => {:events => current_user.related_events} %>
      </div>
    </div>

    <script>
        $(function () {
            $("#notifications-link").click(function () {
                $("#notifications-dialog").slideDown(230);
                return false;
            });
        })
    </script>
<% end %>
