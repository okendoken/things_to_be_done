<% content_for(:title) do%>
    <%= t :new_task %>
<% end %>
<div class="new-task">
  <%= form_for(@task, :html => {:class => 'form-horizontal'}) do |f| %>
        <fieldset>
          <legend><%= t :new_task %></legend>
          <div class="control-group">
            <label class="control-label"><%= t :task_name %></label>
            <div class="controls">
              <%= f.text_field :title, :class => 'input-xxlarge' %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label"><%= t :description %></label>
            <div class="controls">
              <%= f.text_area :description, :class => 'input-xxlarge', :rows => 3 %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Disabled checkbox</label>
            <div class="controls">
              <label class="checkbox">
                <input type="checkbox"/>
                This is a disabled checkbox
              </label>
            </div>
          </div>
          <div class="form-actions base-panel clearfix">
            <%= f.submit :class => "btn btn-large btn-success pull-right" %>
          </div>
        </fieldset>
  <% end %>
</div>