<% content_for(:title) do%>
    <%= @project.title%>
<% end %>

<div class="row">
  <div class="span3">
    <img src="/images/avatar.jpg" class="avatar" alt="image">
  </div>
  <div class="span9 right-content">
    <div class="span7">
      <div class="big-cool-text"><%= link_to @project.title, @project%></div>
      <div class="big-cool-text-4 right-a-bit-align"><%= "#{t(:because)} - #{@project.problem.title}" %></div>
    </div>
    <%= render :partial => 'partials/voter', :locals => {:target => @project} %>
    <div class="base-panel gray-background span8">
      <%= @project.description %>
    </div>
  </div>
</div>

<div class="messages"></div>

<div class="related-content">

  <div class="group-header">
    <%= t :tasks%>
  </div>
  <div class="base-panel">
    <%= render :partial => 'partials/task_row', :collection => @project.tasks, :as => :task %>
  </div>


  <%= render :partial => 'partials/supporters', :locals => {:target => @project} %>

</div>