<% content_for(:title) do%>
    <%= @project.title%>
<% end %>

<div>
  <div class="big-cool-text"><%= link_to @project.title, @project, :confirm => 'Are you sure?'%></div>
  <div class="big-cool-text-4 right-a-bit-align"><%= "#{t(:because)} - #{@project.problem.title}" %></div>
  <%= render :partial => 'partials/voter', :locals => {:target => @project} %>
</div>

<div class="base-panel gray-background descr-panel">
  <%= @project.description %>
</div>

<div class="group-header">
  <%= t :tasks%>
</div>
<div class="base-panel">
  <% @project.tasks.each do |task| %>
      <div class="row">
        <span class="span3"><%= link_to task.title, project_task_path(@project, task) %></span>
        <span class="span3"><%= task.desc_short %></span>
      </div>
  <% end %>
</div>

<div class="group-header">
  <%= t(:people_who_support) + ' ' + @project.title %>
</div>
<div class="base-panel">
  <% @project.users.each do |user| %>
      <div class="row">
        <span class="span3"><%= link_to user.display_name, user %></span>
      </div>
  <% end %>
</div>